{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": false,
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "removeComments": true,
    "noLib": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "useUnknownInCatchVariables": false,
    "target": "es6",
    "sourceMap": true,
    "allowJs": true,
    "outDir": "dist",
    "lib": [
      "es7"
    ],
    "paths": {
      "@infinity-js/core": [
        "./packages/core"
      ],
      "@infinity-js/core/*": [
        "./packages/core/*"
      ],
      "@infinity-js/models": [
        "./packages/models"
      ],
      "@infinity-js/models/*": [
        "./packages/models/*"
      ],
    }
  },
  "include": [
    "packages/**/*",
  ],
  "exclude": [
    "node_modules",
    "**/*.spec.ts"
  ]
}