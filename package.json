{
  "name": "@infinity-js/core",
  "version": "0.0.1",
  "description": "Uma biblioteca para gerenciar os servi√ßos node da infinity",
  "author": "White Angel <whiteangel.dev>",
  "main": "index.js",
  "scripts": {
    "test": "nyc mocha packages/**/*.spec.ts --reporter spec",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/infinity-js/infinity-npm"
  },
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/infinity-js/infinity-npm/issues"
  },
  "homepage": "https://github.com/infinity-js/infinity-npm#readme",
  "dependencies": {
    "class-transformer": "0.5.1",
    "class-validator": "0.13.2",
    "reflect-metadata": "0.1.13",
    "uuid": "9.0.0"
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-angular": "17.1.0",
    "@types/chai": "4.3.3",
    "@types/node": "18.7.17",
    "@typescript-eslint/eslint-plugin": "4.33.0",
    "@typescript-eslint/parser": "4.33.0",
    "@types/sinon": "10.0.13",
    "@types/reflect-metadata": "0.1.0",
    "@types/mocha": "9.1.1",
    "chai": "4.3.6",
    "eslint": "7.32.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-plugin-import": "2.26.0",
    "nyc": "15.1.0",
    "husky": "8.0.1",
    "lerna": "5.5.1",
    "mocha": "10.0.0",
    "sinon": "14.0.0",
    "sinon-chai": "3.7.0",
    "lint-staged": "13.0.3",
    "ts-node": "10.9.1",
    "prettier": "2.7.1",
    "typescript": "4.8.2"
  },
  "lint-staged": {
    "**/*.ts": [
      "prettier --ignore-path ./.prettierignore --write"
    ],
    "packages/**/*.json": [
      "prettier --ignore-path ./.prettierignore --write"
    ]
  },
  "nyc": {
    "include": [
      "packages/**/*.ts"
    ],
    "exclude": [
      "packages/**/*.spec.ts"
    ],
    "extension": [
      ".ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "text-summary",
      "html"
    ],
    "sourceMap": true,
    "instrument": true
  },
  "mocha": {
    "require": [
      "ts-node/register",
      "node_modules/reflect-metadata/Reflect.js",
      "hooks/mocha-init-hook.ts"
    ],
    "exit": true
  }
}